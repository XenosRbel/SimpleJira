<!DOCTYPE html>
<html>
  <head>
    <title>SimpleJira</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <span>Здравствуйте, <%= current_user.email %></span>
        <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
        <%= link_to 'Profile',  persons_profile_path, :class => "navbar-link"%> |
        <%= link_to 'Home',  home_index_path, :class => "navbar-link"%>

        <p>
          <%= link_to 'Projects',  projects_path, :class => "navbar-link"%> |
          <%= link_to 'Teams',  teams_path, :class => "navbar-link"%> |
          <%= link_to 'Users',  persons_path, :class => "navbar-link" %> |
          <%= link_to 'Tasks',  tasks_path, :class => "navbar-link" %> |
          <%= link_to 'Posts',  posts_path, :class => "navbar-link" %> |
          <%= link_to 'Dashboard',  reports_path, :class => "navbar-link" %>
        </p>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
