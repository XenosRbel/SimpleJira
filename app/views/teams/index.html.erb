<h1>Teams#index</h1>
<p>Find me in app/views/teams/index.html.erb</p>

<%= link_to 'New team', new_team_path %>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.id %></td>
      <td><%= team.name %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
      <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <td><%= link_to 'Destroy', team_path(team), method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>