<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :content %><br>
    <%= form.text_field :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :comments %><br>
    <%= form.text_field :comments, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :status %><br>
    <%= form.select :status, Task.statuses.keys.to_a, {}, class: 'form-control', id: ' exampleFormControlSelect1' %>
  </div>
  <div class="form-group">
    <%= form.label :start_date %><br>
    <%= form.date_field :start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :estimation %><br>
    <%= form.select :estimation, Task.estimations.keys.to_a, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :users %><br>
    <%= form.collection_select :user_id, User.order(:email), :id, :email, {}, class: 'form-control', include_blank: true %>
  </div>
  <div class="form-group">
    <%= form.label :project %>
    <%= form.collection_select :project_id, Project.order(:id), :id, :name, {}, class: 'form-control', include_blank: true %>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>

<% end %>