<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>

<% if can? :edit, @posts %>
  <%= link_to 'New post', new_post_path %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>content</th>
    <th>created_at</th>
    <th>updated_at</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td><%= post.project_id %></td>
      <td><%= link_to 'Show', post_path(post) %></td>

      <% if can? :manage, @posts %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post), method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>