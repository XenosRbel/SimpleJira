<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>

<% if can? :edit, @posts %>
  <%= link_to 'New post', new_post_path, class: "btn btn-secondary mb-md-3" %>
<% end %>

<table class="table">
  <tr>
    <th>content</th>
    <th>created_at</th>
    <th>updated_at</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to 'Show', post_path(post), class: 'btn btn-primary' %></td>

      <% if can? :manage, @posts %>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-dark' %></td>
        <td><%= link_to 'Destroy', post_path(post), method: :delete,
                        data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      <% end %>
    </tr>
  <% end %>
</table>