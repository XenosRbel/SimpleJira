<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>

<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>ID</th>
    <th>content</th>
    <th>comments</th>
    <th>created_at</th>
    <th>updated_at</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.content %></td>
      <td><%= post.comments %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
    </tr>
  <% end %>
</table>